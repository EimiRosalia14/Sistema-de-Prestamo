@model IEnumerable<Sistema_de_Prestamo.Models.Prestamo>

@{
    ViewBag.Title = "Prestamo Anual";
}
<style>
    @@media print {
        .no-print, .no-print * {
            display: none !important;
        }
    }
</style>

<h2>Reporte de Prestamo Anual</h2>
@Html.Partial("_ReporteAnualPartial")
<button onclick="window.print();" class="btn btn-info pull-right no-print">Imprimir</button>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nombre)
        </th>
        <th>
            Prestador
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoCuotas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormaPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MontoCuota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalIntereses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MontoPagar)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prestadore.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoCuotas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoCuota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalIntereses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoPagar)
            </td>
        </tr>
    }

</table>
